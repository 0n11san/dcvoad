<body>

  <header class="masthead">
    <div class="JESlogo">

        <!-- navbar -->
        <div class="voad-navbar">
          <a href="/"><img alt="home emblem" id="VOAD-logo" src="assets/media/DCVOAD.png"></a>
          <a href="/about">About</a>
          <a href="/members">Member Orgs</a>
          <div id="blank-space"></div>
          <div>
            <div class="menu-content">
              <i class="fa fa-unlock-alt"></i><a href="/user" id="login">Login</a> | <i class="fa fa-user"></i><a href="/register">Register</a>
            </div>

            <div class="arrow-up"></div>

            <!-- Dropdown for the login -->
            <div class="login-form">
              <form>

                <!-- username -->
                <label>Username</label>
                <div>
                  <input type="text" id="jamaldropdown" placeholder="Username" required/>
                </div>

                <!-- password -->
                <label>Password</label>
                <div>
                  <input type="password" id="jamaldropdown" placeholder="Password" required/>
                </div>

                <!-- submit -->
                <div>
                  <input type="submit" value="Log In" />
                </div>

                <!-- lost password system tbd -->
                <div>
                  <a href="#" style="text-decoration:none;position:relative;top:20px;font-size:16px;color:gray;">Lost Your Password?</a>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>
    </header>

